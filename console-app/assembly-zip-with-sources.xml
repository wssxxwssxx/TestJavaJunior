<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>ws</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src</directory>
            <outputDirectory>/console-app/src</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/console-app</outputDirectory>
            <includes>
                <include>assembly-jar-with-dependencies.xml</include>
                <include>assembly-zip-with-sources.xml</include>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../parser-api/src</directory>
            <outputDirectory>/parser-api/src</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../parser-api</directory>
            <outputDirectory>/parser-api</outputDirectory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/target/orders_parser-wd.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>orders_parser.jar</destName>
        </file>
    </files>
</assembly>
